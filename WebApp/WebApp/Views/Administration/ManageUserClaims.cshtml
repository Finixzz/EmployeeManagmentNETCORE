@model WebApp.ViewModels.UserClaimsViewModel
@{
    ViewData["Title"] = "ManageUserClaims";
    Layout = "~/Views/_Layout.cshtml";
}

    <div class="wrapper">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h2>Manage User Claims</h2>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Claims.Count(); i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                            <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                            <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">@Model.Claims[i].ClaimType</label>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn">Update</button>
                    <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@Model.UserId" class="btn" style="color:white;">Cancel</a>
                </div>
            </div>
        </form>
    </div>

