@model WebApp.ViewModels.CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/_Layout.cshtml";
}

    <div class="d-container">
        <h1 style="margin-left:10%;">Create new role</h1>
        <form method="post" asp-action="createrole" asp-controller="administration" style="padding:30px 0; margin:0 10%;">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName">Role name</label>
                <input asp-for="RoleName" type="text" value="" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button class="btn" type="submit" style="width:200px;">submit</button>
            <a class="btn" asp-action="index" asp-controller="administration"style="width:200px;">Cancel</a>
        </form>
    </div>


