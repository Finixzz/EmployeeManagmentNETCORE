@model List<WebApp.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "ManageUserRoles";
    Layout = "~/Views/_Layout.cshtml";
    var userId = ViewBag.userId;
}

<div class="wrapper">
    <form  method="post">
        <div class="card">
            <div class="card-header">
                <h2>Manage User Roles</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName</label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <button type="submit" class="btn">Update</button>
                <a asp-action="EditUser" asp-controller="administration" asp-route-id="@userId" class="btn" style="color:white;">Cancel</a>
            </div>
        </div>
    </form>
</div>

