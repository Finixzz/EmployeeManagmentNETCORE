@model WebApp.Models.Department
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/_Layout.cshtml";
}

@{
    <div class="d-card">
        <button class="btn" style="position:absolute; margin-top:5vh; left:25%;"
                onclick="window.location.href='/department'">
            <bold>&larr;</bold>
        </button>
        <img src="https://cdn.pixabay.com/photo/2015/05/15/14/22/conference-room-768441_1280.jpg" alt="Avatar" style="width:100%; height:50vh;">
        <div class="d-container">

            <form asp-action="save" asp-controller="department" method="post" style="padding:30px 0; width:40vh;">
                <div class="form-group">
                    <label asp-for="@Model.Name">Department name</label>
                    <input asp-for="@Model.Name" type="text" value="" class="form-control"/>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.GroupName">Department group</label>
                    <input asp-for="@Model.GroupName" type="text"  value="" class="form-control"/>
                    <span asp-validation-for="@Model.GroupName" class="text-danger"></span>
                </div>
                <button class="btn" style="width:100%;">SAVE</button>
            </form>

        </div>
    </div>
}
@section scripts{
    <script src="~/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

