@model WebApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="d-container">
    <h1 style="margin-left:10%;">User Login</h1>
    <form method="post" style="padding:30px 0; margin:0 10%;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" value="" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" value="" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m=>m.RememberMe)
                </label>
            </div>
        </div>
        <button class="btn" type="submit" style="width:200px;">Login</button>
    </form>

</div>

